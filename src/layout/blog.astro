---
import '../styles/global.css';
import { Button } from '@/components/ui/button';
import Prose from '../components/prose.astro';

const { frontmatter } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="generator" content={Astro.generator} />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{frontmatter.title ? `${frontmatter.title}` : 'Aniketh Chenjeri'}</title>
  </head>

  <body
    class="min-h-screen bg-background text-foreground font-mono"
  >
    <main class="flex flex-col min-h-screen items-center justify-start py-6">
      <div class="w-full max-w-3xl px-4 sm:px-6">
        <header
          class="relative flex w-full items-center justify-center border-b border-border pb-4 pt-8 mb-8"
        >
          <Button
            variant="ghost"
            client:load
            className="absolute left-0 shrink-0"
          >
            <a href="/" class="no-underline text-foreground hover:text-primary font-mono text-sm sm:text-base">
              Go Home
            </a>
          </Button>

          <h1 class="text-lg sm:text-2xl font-semibold tracking-tight text-center font-mono px-20 sm:px-0">
            {frontmatter.title}
          </h1>
        </header>

        <Prose class="w-full">
          <slot />
        </Prose>
      </div>
    </main>
  </body>
</html>
